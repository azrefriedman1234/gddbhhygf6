<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RSS Sources (שורה לכל מקור)\n\n• URL: https://...\n• חיפוש Nitter: q: טקסט\n• משתמש Nitter: @username\n\nטיפ: מקורות RSS רגילים הם ה-fallback אם Nitter נופל."
        android:textSize="14sp" />

    <EditText
        android:id="/etRssSources"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top|start"
        android:hint="הדבק כאן..."
        android:inputType="textMultiLine"
        android:padding="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="/btnResetRss"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ברירת מחדל" />

        <Button
            android:id="/btnSaveRss"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="שמור" />
    </LinearLayout>
</LinearLayout>
