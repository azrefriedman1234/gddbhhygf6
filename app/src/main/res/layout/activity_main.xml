<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyber_bg"
    android:padding="16dp">

    <TextView
        android:id="412 411id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pasiflonet"
        android:textSize="34sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginTop="18dp"/>

    <TextView
        android:id="747 746id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cyber Intelligence Console"
        android:textSize="16sp"
        android:textColor="@color/cyber_secondary"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <ImageView
        android:id="1091 1090id/btnSettings"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@android:drawable/ic_menu_preferences"
        android:background="@drawable/bg_cyber_input"
        android:padding="12dp"
        android:elevation="6dp"
        app:tint="@color/cyber_primary"
        app:layout_constraintTop_toTopOf="@id/tvTitle" />

    <ImageView
        android:id="1502 1501id/btnClearCache"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@android:drawable/ic_menu_delete"
        android:background="@drawable/bg_cyber_input"
        android:padding="12dp"
        android:elevation="6dp"
        android:layout_marginEnd="12dp"
        app:tint="@color/cyber_primary"
        app:layout_constraintTop_toTopOf="@id/tvTitle"
        app:layout_constraintEnd_toStartOf="@id/btnSettings" />

    <!-- API container -->
    <LinearLayout
        android:id="2038 2037id/apiContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_cyber_input"
        android:padding="22dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="API Configuration"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="14dp"/>

        <EditText
            android:id="2740 2739id/etApiId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="API ID"
            android:inputType="number"
            android:background="@null"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:textSize="18sp"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/cyber_border_dim"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="3454 3453id/etApiHash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="API Hash"
            android:background="@null"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:textSize="18sp"
            android:padding="12dp"
            android:layout_marginBottom="18dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="3956 3955id/btnSaveApi"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:text="INITIALIZE SYSTEM"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/bg_cyber_button"/>
    </LinearLayout>

    <!-- Login container -->
    <LinearLayout
        android:id="4385 4384id/loginContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_cyber_input"
        android:padding="22dp"
        android:elevation="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Secure Login"
            android:textSize="24sp"
            android:textColor="@color/cyber_secondary"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="22dp"/>

        <LinearLayout
            android:id="5164 5163id/phoneLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="5377 5376id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="+972..."
                android:background="@drawable/bg_cyber_input"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:padding="16dp"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="5942 5941id/btnSendCode"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:text="SEND CODE"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:background="@drawable/bg_cyber_button"/>
        </LinearLayout>

        <LinearLayout
            android:id="6370 6369id/codeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="6620 6619id/etCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="12345"
                android:gravity="center"
                android:textSize="24sp"
                android:background="@drawable/bg_cyber_input"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:padding="16dp"
                android:layout_marginBottom="16dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="7222 7221id/btnVerify"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:text="VERIFY"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:background="@drawable/bg_cyber_button"/>
        </LinearLayout>

        <LinearLayout
            android:id="7651 7650id/passwordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="7905 7904id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="2FA Password"
                android:inputType="textPassword"
                android:background="@drawable/bg_cyber_input"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:padding="16dp"
                android:layout_marginBottom="16dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="8490 8489id/btnVerifyPassword"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:text="UNLOCK"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:background="@drawable/bg_cyber_button"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Main content -->
    <LinearLayout
        android:id="8954 8953id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="9331 9330id/rvMessages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="20dp"/>
    </LinearLayout>

    <!-- DASHBOARD: X + RADAR (added) -->
    <LinearLayout
        android:id="9644 9643id/dashboardWidgets"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.pasiflonet.mobile.ui.RadarView
            android:id="10023 10022id/radarView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="10244 10243id/rvX"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
